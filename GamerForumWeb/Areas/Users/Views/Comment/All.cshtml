@model PostQueryModel
@inject IUserService userService
@{
    ViewBag.Title = "All Comments";
}

<h2 class="card text-center">@ViewBag.Title</h2>
<hr />

<section class="gradient-custom">
    <div class="container">
        <div class="row d-flex justify-content-center">
            <div class="col-md-12 col-lg-10 col-xl-8">
                <div class="card">
                    <div class="card-body p-4">
                        <div class="row">
                            <div class="col">
                                <div class="d-flex flex-start">
                                    <img class="rounded-circle shadow-1-strong me-3"
                                         src="https://mdbcdn.b-cdn.net/img/Photos/Avatars/img%20(10).webp" alt="avatar" width="65"
                                         height="65" />
                                    <div class="flex-grow-1 flex-shrink-1">
                                        <div>
                                            <div class="d-flex justify-content-between align-items-center">
                                                <p class="mb-3">
                                                    @Model.Username <span class="small">@Model.CreatedOn</span>
                                                </p>
                                                <a href="@Url.Action("Add", "Comment", new { PostId = Model.PostId })" class="btn btn-outline-success btn-sm">Reply</a>
                                            </div>
                                            <p class="card text-center">
                                                @Model.Title
                                            </p>
                                            <p class="small mb-0">
                                                @Model.Content
                                            </p>
                                        </div>
                                        <hr />
                                        @if (!Model.Comments.Any())
                                        {
                                                <div class="mt-4 p-5 bg-transparent">
                                                    <p class="display-6 text-dark">Welcome to the comment section! At this point the post stil dont have comments!</p>
                                                    <p class="lead text-dark">
                                                        Click on reply button to make new comment!
                                                    </p>
                                                </div>

                                        }
                                        @foreach (var comment in Model.Comments)
                                        {
                                                <div class="d-flex flex-start mt-4">
                                                    <a class="me-3" href="#">
                                                        <img class="rounded-circle shadow-1-strong"
                                                     src="https://mdbcdn.b-cdn.net/img/Photos/Avatars/img%20(11).webp" alt="avatar"
                                                     width="65" height="65" />
                                                    </a>

                                                    <div class="flex-grow-1 flex-shrink-1">
                                                        <div>
                                                            <div class="d-flex justify-content-between align-items-center">
                                                                <p class="mb-1">
                                                                @userService.GetUserNameById(comment.UserId).Result <span class="small">@comment.CreatedDate</span>
                                                                </p>
                                                            </div>
                                                            <p class="small mb-0">
                                                            @comment.Content
                                                            </p>

                                                            <br />
                                                        @if (User.Id() == comment.UserId || User.IsAdmin())
                                                        {
                                                                    <a asp-controller="Comment" asp-action="Edit" asp-route-commentId="@comment.Id" class="btn btn-outline-warning btn-sm">Edit Comment</a>
                                                                    <a asp-controller="Comment" asp-action="Delete" asp-route-commentId="@comment.Id" class="btn btn-outline-danger btn-sm">Delete</a>
                                                        }
                                                        </div>
                                                    </div>
                                                    <div class="d-flex justify-content-between align-items-center gap-1">
                                                        <a asp-controller="Comment" asp-action="Like" asp-route-commentId="@comment.Id" class="btn btn-outline-success btn-sm">Like</a>
                                                        <span class="badge bg-secondary">Likes: @comment.Votes.Where(x=> (int)x.Type > 0).Sum(x => (int)x.Type)</span>
                                                        <a asp-controller="Comment" asp-action="Dislike" asp-route-commentId="@comment.Id" class="btn btn-outline-danger btn-sm">Dislike</a>
                                                    </div>
                                                </div>
                                                <hr />
                                        }
                                    </div>
                                </div>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
</section>