@model IEnumerable<CommentQueryModel>

@{
    ViewBag.Title = "All Comments";
}

<h2 class="text-center">@ViewBag.Title</h2>
<hr />

<div class="text-center row">
    @foreach (var comment in Model)
    {
        <div class="row d-flex justify-content-center">
            <div class="col-md-8 col-lg-6">
                <div class="card shadow-0 border" @*style="background-color: #f0f2f5;"*@>
                    <div class="card-body p-4">
                        <div class="card mb-4">
                            <div class="card-body">
                                <p>@comment.Content</p>
                                <div class="d-flex justify-content-between">
                                    <div class="d-flex flex-row align-items-center">
                                        <img src="https://mdbcdn.b-cdn.net/img/Photos/Avatars/img%20(4).webp" alt="avatar" width="25"
                                         height="25" />
                                         <p class="small mb-0 ms-2">@comment.Username</p>                                        
                                    </div>
                                    <div class="d-flex flex-row align-items-center">
                                        @*<p class="small text-muted mb-0">Upvote?</p>
                                    <i class="far fa-thumbs-up mx-2 fa-xs text-black" style="margin-top: -0.16rem;"></i>
                                    <p class="small text-muted mb-0">3</p>*@
                                        <div class="d-flex justify-content-between align-items-center">                                           
                                            <a asp-controller="Comment" asp-action="Edit" asp-route-commentId="@comment.Id" class="btn btn-outline-warning">Edit Comment</a>
                                            <a asp-controller="Comment" asp-action="Delete" asp-route-commentId="@comment.Id" class="btn btn-outline-danger">Delete</a>
                                        </div>
                                    </div>
                                </div>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    }

</div>