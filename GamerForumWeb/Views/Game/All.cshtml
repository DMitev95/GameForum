@model IEnumerable<GamesQueryModel>

@{
    ViewBag.Title = "All Games";
}

<h2 class="text-center">@ViewBag.Title</h2>
<hr />

<div class="text-center row">
    @foreach (var game in Model)
    {
        <div class="card col-4" style="width: 20rem; ">
            <img class="card-img-top" style="width: 18rem;"
             src="@game.ImageUrl" alt="Book Image">
            <div class="card-body">

                <h5 class="card-title mt-1">@game.Title</h5>
                <p class="mb-0">Studio: @game.Studio</p>
                <p class="mb-0">Description: @game.Description</p>
                <p class="mb-0">Rating: @game.Rating</p>
                <p>Category: @game.Category</p>
            </div>
            <form>
                @Html.HiddenFor(m=>game.Id)
            </form>
            <form class="input-group-sm" asp-controller="Post" asp-action="All" asp-route-gameId="@game.Id">
                <input type="submit" value="Posts" class="fs-6 btn btn-success mb-3 p-2" />
            </form>

            @*<form class="input-group-sm" asp-controller="Post" asp-action="Add" method="get" asp-route-gameId="@game.Id">
                <input type="submit" value="Create Post" class="fs-6 btn btn-success mb-3 p-2" />
            </form>*@
            <a asp-controller="Post" asp-action="Add" asp-route-gameId="@game.Id" class="btn btn-danger">Add Post</a>
            <a asp-controller="Game" asp-action="Delete" asp-route-id="@game.Id" class="btn btn-danger">Delete</a>
        </div>
    }
</div>
