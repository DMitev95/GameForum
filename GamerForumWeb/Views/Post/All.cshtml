@model IEnumerable<PostQueryModel>

@{
    ViewBag.Title = "All Posts";
}

<h2 class="text-center">@ViewBag.Title</h2>
<hr />


<div class="text-center row">
    @if (!Model.Any())
    {
        <div class="mt-4 p-5 bg-light">
            <h1 class="display-4">Welcome to the post section! At this point the game stil dont have posts!</h1>
            <p class="lead">
                Go back and be the furst person who will make post!
            </p>
            <p class="lead">
                <a asp-controller="Game" asp-action="All" class="btn btn-outline-info">All Games</a>
            </p>
            <hr class="my-4">            
        </div>

    }
    @foreach (var post in Model)
    {
        <div class="row d-flex justify-content-center">
            <div class="col-md-11 col-lg-9 col-xl-7">
                <div class="d-flex flex-start mb-4">
                    <img class="rounded-circle shadow-1-strong me-3"
                     src="https://mdbcdn.b-cdn.net/img/Photos/Avatars/img%20(32).webp" alt="avatar" width="65"
                     height="65" />
                    <div class="card w-100">
                        <div class="card-body p-4">
                            <div class="">
                                <h5>Johny Cash</h5>
                                <p class="small">@post.CreatedOn</p>
                                <div class="card w-auto">
                                    <div class="card-body p-3">
                                        <p>Title: @post.Title</p>
                                    </div>
                                </div>
                                <div class="card w-auto">
                                    <div class="card-body p-3">
                                        <p>Content: @post.Content</p>
                                    </div>
                                </div>

                                <div class="d-flex justify-content-between align-items-center">
                                    @*<div class="d-flex align-items-center">
                                <a href="#!" class="link-muted me-2"><i class="fas fa-thumbs-up me-1"></i>132</a>
                                <a href="#!" class="link-muted"><i class="fas fa-thumbs-down me-1"></i>15</a>
                                </div>*@
                                    <a asp-controller="Comment" asp-action="Add" asp-route-postId="@post.PostId" class="btn btn-outline-success">Add Comment</a>
                                    <a asp-controller="Comment" asp-action="All" asp-route-postId="@post.PostId" class="btn btn-outline-info">All Comments</a>
                                    <a asp-controller="Post" asp-action="Delete" asp-route-postId="@post.PostId" class="btn btn-outline-danger">Delete Post</a>
                                </div>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    }
</div>