@model GameModel

<div class="col-sm-12 offset-lg-2 col-lg-8 offset-xl-3 col-xl-6">
    <form method="post">
        <fieldset>
            <div class="mb-3">
                <label asp-for="@Model.Title" class="form-label">Title</label>
                <input asp-for="@Model.Title" class="form-control" aria-required="true" />
                <span asp-validation-for="Title" class="text-danger"></span>
            </div>
            <div class="mb-3">
                <label asp-for="@Model.Studio" class="form-label">Studio</label>
                <input asp-for="@Model.Studio" class="form-control" aria-required="true" />
                <span asp-validation-for="Studio" class="text-danger"></span>
            </div>
            <div class="mb-3">
                <label asp-for="@Model.Description" class="form-label">Description</label>
                <textarea asp-for="@Model.Description" class="form-control" aria-required="true" rows="5"></textarea>
                <span asp-validation-for="Description" class="text-danger"></span>
            </div>
            <div class="mb-3">
                <label asp-for="@Model.ImageUrl" class="form-label">Image URL</label>
                <input asp-for="@Model.ImageUrl" class="form-control" aria-required="true" />
                <span asp-validation-for="ImageUrl" class="text-danger"></span>
            </div>
            <div class="mb-3">
                <label asp-for="@Model.Rating" class="form-label">Rating</label>
                <input asp-for="@Model.Rating" class="form-control" value="" />
                <span asp-validation-for="Rating" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label for="@Model.CategoryId" class="form-label mt-4">Category</label>
                <select class="form-select" asp-for="@Model.CategoryId">
                    @foreach (var category in Model.Categories)
                    {
                        <option value="@category.Id" style="text-dark">@category.Name</option>
                    }
                </select>
            </div>
            <br />
            <div class="mb-3">
                <input class="btn btn-primary" type="submit" value="Save" />
            </div>
        </fieldset>
    </form>
</div>


